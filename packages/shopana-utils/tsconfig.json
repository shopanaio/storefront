{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "composite": false,
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "isolatedModules": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
