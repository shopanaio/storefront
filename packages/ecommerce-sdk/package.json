{
  "name": "@shopana/ecommerce-sdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "default": "./dist/hooks/index.js"
    },
    "./hooks/auth": {
      "types": "./dist/hooks/auth/index.d.ts",
      "default": "./dist/hooks/auth/index.js"
    },
    "./hooks/cart": {
      "types": "./dist/hooks/cart/index.d.ts",
      "default": "./dist/hooks/cart/index.js"
    },
    "./hooks/session": {
      "types": "./dist/hooks/session/index.d.ts",
      "default": "./dist/hooks/session/index.js"
    },
    "./relay": {
      "types": "./dist/relay/index.d.ts",
      "default": "./dist/relay/index.js"
    },
    "./store": {
      "types": "./dist/store/index.d.ts",
      "default": "./dist/store/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "default": "./dist/providers/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./webpack/resolve-provider": "./webpack/resolve-provider.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "relay:shopana": "relay-compiler --config relay.shopana.json",
    "relay:shopify": "relay-compiler --config relay.shopify.json",
    "relay": "yarn relay:shopana && yarn relay:shopify"
  },
  "dependencies": {
    "@shopana/entity": "*",
    "zustand": "^5.0.6",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-relay": "^20.0.0",
    "relay-runtime": "^20.0.0",
    "next": "^14.0.0 || ^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "relay-compiler": "^20.0.0",
    "typescript": "^5.7.2"
  }
}
